@model Producto

<h2>Eliminar Producto</h2>

<div class="alert alert-danger">
    ¿Está seguro que desea eliminar el siguiente producto?
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.IdProducto</td>
    </tr>
    <tr>
        <th>Descripción</th>
        <td>@Model.Descripcion</td>
    </tr>
    <tr>
        <th>Precio</th>
        <td>@Model.Precio</td>
    </tr>
</table>

<form asp-controller="Productos" asp-action="EliminarProductoConfirmado" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdProducto" />
    <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
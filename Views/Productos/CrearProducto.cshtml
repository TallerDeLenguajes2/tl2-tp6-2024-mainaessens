@model Producto

<h2 class="text-danger">Crear Nuevo Producto</h2>

<form asp-action="CrearProducto" method="post">
    <div class="form-group">
        <label asp-for="idProducto">ID del Producto</label>
        <input asp-for="idProducto" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="descripcion">Descripci√≥n</label>
        <input asp-for="descripcion" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="precio">Precio</label>
        <input asp-for="precio" class="form-control" type="number" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear Producto</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
@model Presupuesto

<h2>Eliminar Presupuesto</h2>

<div class="alert alert-danger">
    ¿Está seguro que desea eliminar el siguiente Presupuesto?
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.IdPresupuesto</td>
    </tr>
    <tr>
        <th>ID Cliente</th>
        <td>@Model.Cliente.Id</td>
    </tr>
    <tr>
        <th>Precio</th>
        <td>@Model.FechaCreacion</td>
    </tr>
</table>

<form asp-controller="Presupuestos" asp-action="EliminarPresupuestoConfirmado" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdPresupuesto" />
    <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
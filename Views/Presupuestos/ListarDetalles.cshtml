@model List<PresupuestoDetalle>

<h2>Detalles del Presupuesto</h2>

<table class="table">
    <thead>
        <tr>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var presupuestoDetalle in Model)
            {
                <tr>
                    <td>@presupuestoDetalle.Producto.Descripcion</td>
                    <td>$ @presupuestoDetalle.Producto.Precio</td>
                    <td>@presupuestoDetalle.Cantidad</td>
                    <td>$ @(presupuestoDetalle.Cantidad * presupuestoDetalle.Producto.Precio)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No hay productos en este presupuesto.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
